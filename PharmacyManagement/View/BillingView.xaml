<UserControl x:Class="PharmacyManagement.View.BillingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PharmacyManagement.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush  ImageSource="/images/bills.jpeg" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="544*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="150,4,-5,-44" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <Grid Margin="16,37,434,133">
                <Grid.RowDefinitions >
                    <RowDefinition Height="auto" ></RowDefinition>
                    <RowDefinition Height="auto" ></RowDefinition>
                    <RowDefinition Height="auto" ></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="5.56"/>
                    <RowDefinition Height="7.92"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Medicine Name" FontWeight="Bold" Margin="0,0,0,13" Grid.RowSpan="4" ></Label>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,-225,3" Grid.RowSpan="3" x:Name="medname"/>
                <Label Grid.Row="6" Grid.Column="0" Content="Medicine ID" Margin="0,9,0,11"  FontWeight="Bold" />
                <Label Grid.Row="6" Grid.Column="0" Content="Unit Price" Margin="0,61,0,-48"  FontWeight="Bold"/>
                <Label Grid.Row="6" Grid.Column="0" Content="Quantity" Margin="0,108,0,-108" FontWeight="Bold" ></Label>
                <TextBox Grid.Row="6" Grid.Column="1" Margin="0,5,-225,10" x:Name="medid"  />
                <TextBox Grid.Row="6" Grid.Column="1" Margin="0,60,-225,-45" x:Name="unit" />
                <TextBox Grid.Row="6" Grid.Column="1" Margin="0,106,-225,-91" x:Name="qty"/>
                <TextBox Grid.Row="6" Grid.Column="1" Margin="0,154,-225,-139" x:Name="totalprice"/>
                <Label Grid.Row="6" Grid.Column="0" Content="Total Price" Margin="0,158,0,-158" FontWeight="Bold"/>

            </Grid>
            <DataGrid  Margin="365,35,30,189" AutoGenerateColumns="False" Opacity="0.70" FontWeight="Bold">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Medicine Name" Width="100"/>
                    <DataGridTextColumn Header="Medicine ID" Width="130"/>
                    <DataGridTextColumn Header="Company Price" Width="130"/>
                    <DataGridTextColumn Header="Unit Price" Width="100"/>
                    <DataGridTextColumn Header="Quantity" Width="100"/>
                    <DataGridTextColumn Header="Price" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="     Add" Margin="160,376,387,58" TextOptions.TextFormattingMode="Display" />
            <Button Content="    Search" Click ="Button_Click" Margin="270,376,279,58" TextOptions.TextFormattingMode="Display"  />
            <Button Content="    Expiry" Margin="495,376,55,58" TextOptions.TextFormattingMode="Display" Background="#a33b3b"/>
            <Button Content="    Clear" Margin="381,376,175,58" TextOptions.TextFormattingMode="Display"/>

        </Grid>
        <Frame x:Name="mainbill" Grid.RowSpan="2" Margin="121,4,10,-4" Grid.ColumnSpan="2"   />
        <DataGrid x:Name="grdlist" Margin="179,290,477,53"  AutoGenerateColumns="False" SelectionChanged="grdlist_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Medicine Name" Binding="{Binding MedName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</UserControl>
