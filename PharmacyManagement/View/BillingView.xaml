<UserControl x:Class="PharmacyManagement.View.BillingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PharmacyManagement.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush  ImageSource="/images/bills.jpeg" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="544*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="150,4,-30,-51" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <Grid Margin="16,37,327,215">
                <Grid.RowDefinitions >
                    <RowDefinition Height="40" ></RowDefinition>
                    <RowDefinition Height="40" ></RowDefinition>
                    <RowDefinition Height="40" ></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Medicine ID" FontWeight="Bold" VerticalAlignment="Center" ></Label>
                <TextBox Grid.Row="0" Grid.Column="1" Height="30" Name="medid" VerticalAlignment="Center"/>
                <Label Grid.Row="1" Grid.Column="0" Content="Medicine Name"  FontWeight="Bold" VerticalAlignment="Center"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Unit Price"  FontWeight="Bold" VerticalAlignment="Center"/>
                <Label Grid.Row="3" Grid.Column="0" Content="Quantity" FontWeight="Bold" VerticalAlignment="Center" ></Label>                
                <TextBox Grid.Row="1" Grid.Column="1" Height="30" Width="180" Name="unit" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Height="30" Name="qty" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Height="30" Name="totalprice" VerticalAlignment="Center"/>
                <Label Grid.Row="4" Grid.Column="0" Content="Total Price"  FontWeight="Bold" VerticalAlignment="Center"/>
                <Label Grid.Row="4" Grid.Column="1" Height="30" Content="$0.0" Background="#d1f0e9"  FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
            <DataGrid  Margin="365,35,30,189" AutoGenerateColumns="False" Opacity="0.70" FontWeight="Bold">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Medicine ID" Width="100"/>
                    <DataGridTextColumn Header="Medicine Name" Width="130"/>
                    <DataGridTextColumn Header="Company Price" Width="130"/>
                    <DataGridTextColumn Header="Unit Price" Width="100"/>
                    <DataGridTextColumn Header="Quantity" Width="100"/>
                    <DataGridTextColumn Header="Price" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            
                <Button Content="     Add"  TextOptions.TextFormattingMode="Display"  Height="63" Margin="288,370,267,0" />
                <Button Content="    Print" Click ="Button_Click" Margin="170,370,384,0" Height="63" TextOptions.TextFormattingMode="Display"  />
                <Button Content="    Expiry"  TextOptions.TextFormattingMode="Display" Height="63" Background="#a33b3b" Margin="415,370,140,0"/>
                <Button Content="    Clear"  TextOptions.TextFormattingMode="Display" Height="63" Margin="8,370,474,0" VerticalAlignment="Center"/>
            
        </Grid>
        <Frame x:Name="mainbill" Margin="58,0,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
    </Grid>
    

</UserControl>
