<UserControl x:Class="PharmacyManagement.View.BillingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PharmacyManagement.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush  ImageSource="/images/bills.jpeg" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="544*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="150,4,-5,-44" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <Grid Margin="16,37,335,133">
                <Grid.RowDefinitions >
                    <RowDefinition Height="40" ></RowDefinition>
                    <RowDefinition Height="40" ></RowDefinition>
                    <RowDefinition Height="40" ></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="180"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Medicine Name" FontWeight="Bold"  ></Label>
                
                <Label Grid.Row="1" Grid.Column="0" Content="Medicine ID" VerticalAlignment="Center"  FontWeight="Bold" />
                <Label Grid.Row="2" Grid.Column="0" Content="Unit Price" VerticalAlignment="Center" FontWeight="Bold"/>
                <Label Grid.Row="3" Grid.Column="0" Content="Quantity" VerticalAlignment="Center" FontWeight="Bold" ></Label>
                <TextBox Grid.Row="0" Grid.Column="1" Height="30" VerticalAlignment="Center" x:Name="medname"  />
                <TextBox Grid.Row="1" Grid.Column="1" Height="30" VerticalAlignment="Center" x:Name="medid" />
                <TextBox Grid.Row="2" Grid.Column="1" Height="30" x:Name="unit" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Height="30" x:Name="qty" VerticalAlignment="Center"/>
                <Label Grid.Row="4" Grid.Column="0" Content="Total Price"  FontWeight="Bold" VerticalAlignment="Center"/>
                <Label Grid.Row="4" Grid.Column="1" Height="30" Background="#d1f0e9" Content="$0.0"  FontWeight="Bold" VerticalAlignment="Center"/>

            </Grid>
            <DataGrid  Margin="365,35,30,189" AutoGenerateColumns="False" Opacity="0.70" FontWeight="Bold">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Medicine Name" Width="100"/>
                    <DataGridTextColumn Header="Medicine ID" Width="130"/>
                    <DataGridTextColumn Header="Company Price" Width="130"/>
                    <DataGridTextColumn Header="Unit Price" Width="100"/>
                    <DataGridTextColumn Header="Quantity" Width="100"/>
                    <DataGridTextColumn Header="Price" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="     Add" Margin="160,376,387,58" TextOptions.TextFormattingMode="Display" />
            <Button Content="    Search" Click ="Button_Click" Margin="270,376,279,58" TextOptions.TextFormattingMode="Display"  />
            <Button Content="    Expiry" Margin="495,376,55,58" TextOptions.TextFormattingMode="Display" Background="#a33b3b"/>
            <Button Content="    Clear" Margin="381,376,175,58" TextOptions.TextFormattingMode="Display"/>

        </Grid>
        <Frame x:Name="mainbill" Grid.RowSpan="2" Margin="121,4,10,-4" Grid.ColumnSpan="2"   />
        <DataGrid x:Name="grdlist" Margin="179,290,477,53"  AutoGenerateColumns="False" SelectionChanged="grdlist_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Medicine Name" Binding="{Binding MedName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</UserControl>
